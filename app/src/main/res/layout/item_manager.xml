<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:id="@+id/see_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/manager_image"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/user_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/manager_image"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <TextView
                android:maxLength="15"
                android:id="@+id/manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/texts"
                android:textSize="@dimen/_12sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@+id/manager_image"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">
            <TextView
                android:id="@+id/manager_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:clickable="false"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/texts"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:id="@+id/edit_lay"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/total_coins"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:padding="@dimen/_2sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:background="@null"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"
                android:textAlignment="center"
                android:drawableRight="@drawable/ic_baseline_edit_ne"
                android:drawableLeft="@drawable/money"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:visibility="visible"
                android:id="@+id/edit_coin"
                android:background="@drawable/background_edit"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:text="@string/save"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </RelativeLayout>

</layout>
