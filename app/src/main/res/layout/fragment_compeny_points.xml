<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-2dp"
        android:background="@color/colorSecondary">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_margin="-1dp"

            android:fillViewport="true"
            tools:ignore="SpeakableTextPresentCheck">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/img_avreage"

                        />

                    <RelativeLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView

                            android:layout_alignParentStart="true"
                            android:drawableRight="@drawable/dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_10sdp"
                            android:clickable="false"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/all_points"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/coin"
                            android:layout_centerHorizontal="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/img_coin" />

                        <TextView
                            android:layout_toRightOf="@id/coin"
                            android:id="@+id/tv_coins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_2sdp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_16sdp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView
                            android:layout_alignParentStart="true"
                            android:drawableRight="@drawable/dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_10sdp"
                            android:clickable="false"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/points_for_1_qr"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp" />
                        <ImageView
                            android:id="@+id/coin2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/img_coin" />

                        <TextView
                            android:layout_toRightOf="@id/coin2"
                            android:id="@+id/tv_coins2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_2sdp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_16sdp" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
