<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="-1dp"
            android:background="@drawable/login_bg"
            android:fillViewport="true"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="start">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/logout"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_baseline_exit_to_app" />

                    <ImageView

                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginBottom="80dp"
                        android:src="@drawable/logo_splash"
                        android:visibility="gone" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/select_language"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/language" />

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/logo_splash" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/welcome_back"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/sign_up"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <EditText
                             android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@null"
                            android:drawableLeft="@drawable/user_img"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/first_name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/texts"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@null"
                            android:drawableStart="@drawable/user_img"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/last_name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp"
                            android:textColorHint="@color/texts"

                            tools:ignore="TextContrastCheck"
                            android:importantForAutofill="no" />
                        <EditText
                            android:visibility="gone"
                            android:background="@null"
                            android:drawableLeft="@drawable/town_img"
                            android:drawablePadding="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/town"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp" />
                        <EditText
                            android:visibility="gone"
                            android:background="@null"
                            android:drawableStart="@drawable/obj_img"
                            android:drawablePadding="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/object_name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp"
                            android:importantForAutofill="no" />
                        <EditText
                             android:id="@+id/edt_email"
                            android:background="@null"
                            android:drawableLeft="@drawable/img_email"
                            android:drawablePadding="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/texts"

                            android:textSize="@dimen/_12sdp"
                            android:autofillHints="" />

                        <EditText
                            android:id="@+id/edt_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:autofillHints=""
                            android:textColorHint="@color/texts"
                            android:background="@null"
                            android:drawableStart="@drawable/img_password"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="TextContrastCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart= "@dimen/_15sdp"
                            android:layout_marginEnd= "@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@null"
                            >

                            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_weight="1.1"
                                android:padding="5dp"
                                app:ccp_defaultCode="48"
                                app:ccp_defaultNameCode="PL"
                                app:ccp_textColor="@color/texts"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                            <EditText
                                android:background="@null"
                                android:id="@+id/edit_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight=".9"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/phone_no"
                                android:digits="0123456789"
                                android:maxLength="15"
                                android:inputType="phone"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/texts"
                                android:textSize="@dimen/_12sdp"
                                android:importantForAutofill="no" />

                        </LinearLayout>



                    </LinearLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:outlineProvider="background"
                        android:outlineSpotShadowColor="@color/white"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/next"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/colorPrimary"
                        app:cornerRadius="@dimen/_15sdp"
                        app:rippleColor="@color/colorSecondary"
                        tools:ignore="TextContrastCheck,TextContrastCheck"
                        tools:targetApi="p" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/or_continue_with"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/google"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/google_login"
                            android:contentDescription="@string/no_data" />
                        <ImageView
                            android:id="@+id/fb"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fb_login"
                            android:contentDescription="@string/no_data" />
                    </LinearLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/signup_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/don_t_have_an_account"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />
                        <TextView
                            android:layout_toEndOf="@+id/one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_6sdp"
                            android:text="@string/sign_up"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>
                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </FrameLayout>
</layout>
